# Admin Panel Environment Variables
# Copy this file to .env.local and update the values

# Frontend API URL (for admin panel API calls)
NEXT_PUBLIC_FRONTEND_API_URL=http://localhost:3000/

# Backend API URL (for admin panel API calls to backend)
NEXT_PUBLIC_BACKEND_API_URL=http://localhost:5000/

# Admin API URL (should match backend routes - /admin/api/)
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:5000/

# Public API URL for assets and public resources
NEXT_PUBLIC_API_URL=http://localhost:3000/

# Environment
NODE_ENV=development

# Optional: Database connection (if needed)
# DATABASE_URL=mongodb://localhost:27017/robotic_life

# Optional: JWT Secret (if needed)
# JWT_SECRET=your-secret-key-here
